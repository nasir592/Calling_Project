{
  "kind": "collectionType",
  "collectionName": "calls",
  "info": {
    "singularName": "call",
    "pluralName": "calls",
    "displayName": "Call"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "startTime": {
      "type": "datetime",
      "required": true
    },
    "endTime": {
      "type": "datetime"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "videoCall",
        "voiceCall"
      ]
    },
    "duration": {
      "type": "datetime"
    },
    "totalCost": {
      "type": "decimal"
    },
    "callStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "ongoing",
        "completed",
        "declined",
        "missed",
        "busy"
      ],
      "default": "pending"
    },
    "channelName": {
      "type": "string",
      "unique": true
    },
    "caller": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::public-user.public-user",
      "inversedBy": "calls"
    },
    "receiver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::public-user.public-user",
      "inversedBy": "calls"
    }
  }
}
